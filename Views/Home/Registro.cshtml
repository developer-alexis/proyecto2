@model Account
<h1 class="mb-3">Registro de usuarios</h1>
<form asp-action="Registro" method="post">
    <div class="form-group">
        <label asp-for="Name">Nombre</label>
        <input asp-for="Name" type="text" class="form-control" placeholder="Escribe tu nombre">
    </div>
    <div class="form-group">
        <label asp-for="Email">Correo electrónico</label>
        <input asp-for="Email" type="email" class="form-control" placeholder="Escribe tu correo electrónico">
    </div>
    <div class="form-group mb-3">
        <label asp-for="Password">Contraseña</label>
        <input asp-for="Password" type="password" class="form-control" placeholder="Escribe tu contraseña">
    </div>
    <button type="submit" class="btn btn-secondary">Continuar</button>
</form>