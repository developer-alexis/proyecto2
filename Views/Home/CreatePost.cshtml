@model Post
<h1 class="mb-3">Crear una discusion</h1>
<form asp-action="CreatePost" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Title">Titulo</label>
        <input asp-for="Title" type="text" class="form-control" placeholder="Titulo de la discusion">
    </div>
    <div class="form-group mb-3">
        <label asp-for="Description">Descripcion</label>
        <textarea asp-for="Description" class="form-control" rows="5"></textarea>
    </div>
    <div class="form-group mb-3">
        <label asp-for="PostPicPath">Subir una imagen</label>
        <input asp-for="PostPicPath" type="file" class="form-control" accept="image/*" placeholder="Subir una imagen">
    </div>
    <button type="submit" class="btn btn-secondary">Continuar</button>
</form>